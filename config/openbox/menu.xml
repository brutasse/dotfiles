<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
	<menu id="root-menu" label="Openbox">
		<menu id="display-menu" label="Display" execute="display-menu"/>
		<item label="Lock Screen">
			<action name="Execute">
				<command>i3lock -e -c 111111</command>
			</action>
		</item>
		<item label="Reconfigure">
			<action name="Reconfigure" />
		</item>
		<item label="Exit">
			<action name="Exit">
				<prompt>yes</prompt>
			</action>
		</item>
		<item label="Shutdown">
			<action name="Execute">
				<command>down</command>
			</action>
		</item>
	</menu>
</openbox_menu>
