[alias]
	ci = commit
	st = status -bs
	di = diff
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	laundry = !sh -c 'git remote prune origin && git branch --merged master | /usr/bin/grep -Ev \"(master|prod)$\" | xargs git branch -d'

[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	excludesfile = ~/.gitignore

[branch "master"]
	remote = origin
	merge = refs/heads/master
[push]
	default = current
[credential]
	helper = cache
[rebase]
	autosquash = true
